    <script>
        var listModal = document.getElementById('listModal');
        listModal.addEventListener('show.bs.modal', function(event) {
            var button = event.relatedTarget;
            var offerId = button.getAttribute('data-offerId');
            var confirmList = listModal.querySelector('#confirmList');
            confirmList.href = '/admin/offers/list/' + offerId;
        });

        var unlistModal = document.getElementById('unlistModal');
        unlistModal.addEventListener('show.bs.modal', function(event) {
            var button = event.relatedTarget;
            var offerId = button.getAttribute('data-offerId');
            var confirmUnlist = unlistModal.querySelector('#confirmUnlist');
            confirmUnlist.href = '/admin/offers/unlist/' + offerId;
        });

        var deleteModal = document.getElementById('deleteModal');
deleteModal.addEventListener('show.bs.modal', function(event) {
    var button = event.relatedTarget;
    var offerId = button.getAttribute('data-offerId');
    var confirmDelete = deleteModal.querySelector('#confirmDelete');

    confirmDelete.removeEventListener('click', handleDeleteClick);
    
    confirmDelete.addEventListener('click', handleDeleteClick);

    async function handleDeleteClick(e) {
        e.preventDefault(); 

        try {
            const response = await fetch('/admin/offers/delete/' + offerId, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const toast = new bootstrap.Toast(document.getElementById('toastMessage'));
            const toastTitle = document.getElementById('toastTitle');
            const toastBody = document.getElementById('toastBody');

            if (response.ok) {
                const result = await response.json();
                toastTitle.textContent = 'Success';
                toastBody.textContent = result.message || 'Offer successfully deleted!';
                document.getElementById('toastMessage').classList.add('bg-success', 'text-white');
                toast.show();

                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                const errorResult = await response.json();
                toastTitle.textContent = 'Error';
                toastBody.textContent = errorResult.message || 'Failed to delete the offer.';
                document.getElementById('toastMessage').classList.add('bg-danger', 'text-white');
                toast.show();
            }
        } catch (error) {
            console.error('Error:', error);
            toastTitle.textContent = 'Unexpected Error';
            toastBody.textContent = 'An unexpected error occurred. Please try again later.';
            document.getElementById('toastMessage').classList.add('bg-danger', 'text-white');
            toast.show();
        }
    }
});


    </script>
