            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All offer types</option>
                                <option>Percentage</option>
                                <option>Fixed Amount</option>
                            </select>
                        </div>
                        <div class="col-md-2 col-6">
                            <input type="date" class="form-control" name="date" placeholder="Date">
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <% if(offers && offers.length > 0) { %>
                        <% for(let i=0; i < offers.length; i++) { %>
                            <article class="itemlist">
                                <div class="row align-items-center">
                                    <div class="col-lg-3 col-sm-4 col-8 flex-grow-1 col-name">
                                        <a class="itemside" href="#">
                                            <div class="info">
                                                <h6 class="mb-0"><%= offers[i].title %></h6>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="col-lg-2 col-sm-2 col-4 col-price"><span><%= offers[i].discountType %></span></div>
                                    <div class="col-lg-2 col-sm-2 col-4 col-status"><span><%= offers[i].discountValue %></span></div>
                                    <div class="col-lg-2 col-sm-2 col-4 col-date">
                                        <span>Start: <%= offers[i].startDate.toLocaleDateString() %></span><br>
                                        <span>End: <%= offers[i].endDate.toLocaleDateString() %></span>
                                    </div>
                                    <div class="col-lg-3 col-sm-2 col-4 col-action text-end">
                                        <% if(offers[i].active) { %>
                                            <button class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#unlistModal" data-offerId="<%= offers[i]._id %>">Unlist</button>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#listModal" data-offerId="<%= offers[i]._id %>">List</button>
                                        <% } %>
                                        <button class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#deleteModal" data-offerId="<%= offers[i]._id %>">
                                            <i class="material-icons md-delete_forever"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </article>
                        <% } %>
                    <% } else { %>
