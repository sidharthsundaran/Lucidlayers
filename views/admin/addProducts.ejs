function validateForm() {
    console.log("hello")
    document.querySelectorAll('.error-message').forEach(el => el.innerHTML = '');
    
    const title = document.getElementById('product_title').value.trim();
    const material = document.getElementById('product_material').value.trim();
    const color = document.getElementById('product_color').value.trim();

    const sleeve = document.getElementById('product_sleeve').value;
    const gender = document.getElementById('gender').value;
    const description = document.querySelector('textarea[name="description"]').value.trim();
    const category = document.getElementById('product_category').value;
    const images = document.getElementById('images').files;
    const sizes = document.getElementsByName('sizes[]');
    const prices = document.getElementsByName('prices[]');
    const stocks = document.getElementsByName('stocks[]');

    let isValid = true;
    if (!title) {
        document.getElementById('titleError').innerHTML = 'Please enter the product title.';
        isValid = false;
    }
    if (!material) {
        document.getElementById('MaterialError').innerHTML = 'Please enter the material.';
        isValid = false;
    }
    if (!color) {
        document.getElementById('colorError').innerHTML = 'Please enter the color.';
        isValid = false;
    }
    if (!sleeve) {
        document.getElementById('sleeveError').innerHTML = 'Please select a sleeve length.';
        isValid = false;
    }
    if (!gender) {
        document.getElementById('genderError').innerHTML = 'Please select a gender.';
        isValid = false;
    }
    if (!description) {
        document.getElementById('descriptionError').innerHTML = 'Please enter a description.';
        isValid = false;
    }

    if (!category) {
        document.getElementById('categoryError').innerHTML = 'Please select a category.';
        isValid = false;
    }

    if (images.length === 0) {
        document.getElementById('imageError').innerHTML = 'Please upload at least one image.';
        isValid = false;
    }
    for (let i = 0; i < sizes.length; i++) {
        if (!sizes[i].value) {
            sizes[i].parentElement.nextElementSibling.innerHTML = 'Please enter a size.';
            isValid = false;
        }
        if (!prices[i].value || isNaN(prices[i].value) || parseFloat(prices[i].value) <= 0) {
            prices[i].parentElement.nextElementSibling.innerHTML = 'Please enter a valid price.';
            isValid = false;
        }
        if (!stocks[i].value || isNaN(stocks[i].value) || parseInt(stocks[i].value) < 0) {
            stocks[i].parentElement.nextElementSibling.innerHTML = 'Please enter a valid stock quantity.';
            isValid = false;
        }
    }

    return isValid;
}

    </script>
        
