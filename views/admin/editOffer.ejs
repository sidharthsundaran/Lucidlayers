    <script>
    const products = <%- JSON.stringify(product) %>;
    const categories = <%- JSON.stringify(categories) %>;
    const offer = <%- JSON.stringify(offer) %>;

    function createCheckboxes(items, containerId, name, selectedIds) {
        const container = document.getElementById(containerId);
        items.forEach(item => {
            const checkboxItem = document.createElement('label');
            checkboxItem.className = 'checkbox-item';
            const isChecked = selectedIds.includes(item._id) ? 'checked' : '';
            checkboxItem.innerHTML = `
                <input type="checkbox" name="${name}[]" value="${item._id}" data-name="${item.name}" ${isChecked}>
                ${item.name}
            `;
            container.appendChild(checkboxItem);
        });
    }

    document.addEventListener('DOMContentLoaded', () => {
        // Initialize checkboxes with selected items
        createCheckboxes(products, 'product_checkboxes', 'productId', offer.productId || []);
        createCheckboxes(categories, 'category_checkboxes', 'categoryId', offer.categoryId || []);

        // Keep the rest of the JavaScript the same, just update the form submission URL
        document.getElementById('offerForm').addEventListener('submit', async function (event) {
    if (!validateForm()) {
        event.preventDefault();
        return;
    }

    event.preventDefault();

    const formData = new FormData(this);
    const formObj = {};

    formData.forEach((value, key) => {
        if (key.endsWith('[]')) {
            const newKey = key.slice(0, -2);
            if (!formObj[newKey]) {
                formObj[newKey] = [];
            }
            formObj[newKey].push(value);
        } else {
            formObj[key] = value;
        }
    });

    try {
        const response = await fetch(`/admin/offers/edit/${offer._id}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formObj)
        });
        console.log('hiii');
        
        console.log(response,'sdsadads');
        
        const result = await response.json();
        console.log(result,'sadsadfs');
        

        if (response.ok && result.status === 'success') {
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: result.message,
            }).then(() => {
                window.location.href = '/admin/offers';
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: result.message || 'Something went wrong.',
            });
        }
    } catch (error) {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An unexpected error occurred. Please try again later.',
        });
    }
});

    });
    document.addEventListener('DOMContentLoaded', () => {
            createCheckboxes(products, 'product_checkboxes', 'productId');
            createCheckboxes(categories, 'category_checkboxes', 'categoryId');
    
            const productSection = document.getElementById('product_checkboxes').parentElement;
            const categorySection = document.getElementById('category_checkboxes').parentElement;
            const applicableToSelect = document.getElementById('applicable_to');
    
            function handleApplicabilityChange() {
                const selectedOption = applicableToSelect.value;
    
                if (selectedOption === 'product') {
                    productSection.style.display = 'block';
                    categorySection.style.display = 'none';
                    toggleCheckboxes('product_checkboxes', true);
                    toggleCheckboxes('category_checkboxes', false);
                } else if (selectedOption === 'category') {
                    productSection.style.display = 'none';
                    categorySection.style.display = 'block';
                    toggleCheckboxes('product_checkboxes', false);
                    toggleCheckboxes('category_checkboxes', true);
                } else if (selectedOption === 'both') {
                    productSection.style.display = 'block';
                    categorySection.style.display = 'block';
                    toggleCheckboxes('product_checkboxes', true);
                    toggleCheckboxes('category_checkboxes', true);
                } else {
                    productSection.style.display = 'none';
                    categorySection.style.display = 'none';
                    toggleCheckboxes('product_checkboxes', false);
                    toggleCheckboxes('category_checkboxes', false);
                }
            }
    
            function toggleCheckboxes(containerId, enabled) {
                const checkboxes = document.querySelectorAll(`#${containerId} input[type="checkbox"]`);
                checkboxes.forEach(checkbox => {
                    checkbox.disabled = !enabled;
                });
            }
    
            applicableToSelect.addEventListener('change', handleApplicabilityChange);
    
            handleApplicabilityChange();
    
            const productCheckboxes = document.querySelectorAll('#product_checkboxes input[type="checkbox"]');
            const categoryCheckboxes = document.querySelectorAll('#category_checkboxes input[type="checkbox"]');
    
            productCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', () => updatePreview(productCheckboxes, 'selected_products'));
            });
    
            categoryCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', () => updatePreview(categoryCheckboxes, 'selected_categories'));
            });
    
            function validateForm() {
        let isValid = true;
        document.querySelectorAll('.error-message').forEach(el => el.innerHTML = '');

        const title = document.getElementById('offer_title').value.trim();
        const discountType = document.getElementById('discount_type').value;
        const discountValue = document.getElementById('discount_value').value;
        const startDate = new Date(document.getElementById('start_date').value);
        const endDate = new Date(document.getElementById('end_date').value);
        const applicableTo = document.getElementById('applicable_to').value;

        if (!title) {
            document.getElementById('titleError').innerHTML = 'Please enter the offer title.';
            isValid = false;
        }

        if (!discountType) {
            document.getElementById('discountTypeError').innerHTML = 'Please select a discount type.';
            isValid = false;
        }

        if (!discountValue || isNaN(discountValue) || Number(discountValue) <= 0) {
            document.getElementById('discountValueError').innerHTML = 'Please enter a valid discount value.';
            isValid = false;
        }

        if (isNaN(startDate.getTime())) {
            document.getElementById('startDateError').innerHTML = 'Please enter a valid start date.';
            isValid = false;
        }

        if (isNaN(endDate.getTime())) {
            document.getElementById('endDateError').innerHTML = 'Please enter a valid end date.';
            isValid = false;
        }

        if (startDate >= endDate) {
            document.getElementById('endDateError').innerHTML = 'End date must be after start date.';
            isValid = false;
        }

        if (!applicableTo) {
            document.getElementById('applicableToError').innerHTML = 'Please select where the offer is applicable.';
            isValid = false;
        }

        return isValid;
    }

const checkedProducts = document.querySelectorAll('#product_checkboxes input[type="checkbox"]:checked');
const checkedCategories = document.querySelectorAll('#category_checkboxes input[type="checkbox"]:checked');
console.log("Checked Products:", Array.from(checkedProducts).map(cb => cb.value));
console.log("Checked Categories:", Array.from(checkedCategories).map(cb => cb.value));

    
            document.addEventListener('DOMContentLoaded', (event) => {
                const darkmodeToggle = document.getElementById('darkmode-toggle');
                const body = document.body;
    
                if (localStorage.getItem('darkmode') === 'enabled') {
                    body.classList.add('dark');
                }
    
                darkmodeToggle.addEventListener('click', (e) => {
                    e.preventDefault();
                    body.classList.toggle('dark');
    
                    if (body.classList.contains('dark')) {
                        localStorage.setItem('darkmode', 'enabled');
                    } else {
                        localStorage.setItem('darkmode', 'disabled');
                    }
                });
            });
        });
    </script>
    
