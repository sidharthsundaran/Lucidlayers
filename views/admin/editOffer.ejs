                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="form-section">
                                    <h3>Basic Information</h3>
                                    <div class="two-column">
                                        <div class="mb-4">
                                            <label for="offer_title" class="form-label">Offer Title</label>
                                            <input type="text" placeholder="Enter offer title" class="form-control" name="title" id="offer_title" value="<%= offer.title %>">
