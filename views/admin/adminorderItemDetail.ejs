        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">Order Details</h2>
                <p>Details for Order ID: <%= order._id %></p>
            </div>
            
            <div class="order-details">
                <div class="order-header">
                    <div>
                        <div class="order-id">Order ID: <%= order._id %></div>
                        <div class="order-date">Placed on: <%= order.createdAt %></div>
                    </div>
                    <form class="order-status-form" action="" method="post">
                        <select class="form-select d-inline-block mb-lg-0 mb-15 mw-200" name="status" id="status">
                          <option value="" disabled selected>Change status</option>
                          <% statusOptions.forEach(function(status) { %>
                            <option value="<%= status %>"><%= status.charAt(0).toUpperCase() + status.slice(1) %></option>
                          <% }); %>
                        </select>
                      
                        <% if (showSaveButton) { %>
                          <button type="submit" class="btn btn-primary">Save</button>
                        <% } %>
                      </form>
                </div>

                <div class="info-grid">
                    <div class="info-card">
                        <h3>Order Info</h3>
                        <p>Shipping: Fargo express</p>
                        <p>Pay method: <%= order.paymentMethod %></p>
                        <p>Status: <%= order.orderStatus %></p>
                    </div>
                    <div class="info-card">
                        <h3>Customer</h3>
                        <p><%= order.user.name %></p>
                        <p><%= order.user.email %></p>
                        <p><%= order.user.phone %></p>
                    </div>
                    <div class="info-card">
                        <h3>Deliver to</h3>
                        <p><%= order.address.firstName %> <%= order.address.lastName %></p>
                        <p><%= order.address.street %>, <%= order.address.apartment %></p>
                        <p><%= order.address.city %>, <%= order.address.state %> <%= order.address.zip %></p>
                    </div>
                </div>

                <table class="items-table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Unit Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (order && order.items && order.items.length > 0) { %>
                            <% order.items.forEach(item => { %>
                                <tr>
                                    <td>
                                        <div class="product-cell">
                                            <img src="/uploads/<%= item.productId.images[0] %>" alt="<%= item.productId.name %>" class="product-image">
                                            <div class="product-info">
                                                <span class="product-name"><%= item.productId.name %></span>
                                                <span class="product-size">Size: <%= item.size %></span>
                                            </div>

                                        </div>
                                    </td>
                                    <td>₹<%= item.price.toFixed(2) %></td>
                                    <td><%= item.quantity %></td>
                                    <td>₹<%= (item.price * item.quantity).toFixed(2) %></td>
                                    <td><%= item.orderStatus %></td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        <div class="mb-3">
                                            <label for="reason-<%= item._id %>">Reason:</label>
                                            <textarea id="reason-<%= item._id %>" class="reason-textarea" disabled><%= item.reason %></textarea>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center">No items found in this order.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>

                <% if(order.paymentMethod != 'Pay On Delivery') { %>
