            <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
            <script>
                   let cropper;
    let currentImage = null;
    let imageArray = []; // Stores new images
    let existingImages = <%- JSON.stringify(data.images) %>; // Existing images loaded from server
    console.log(existingImages);
    
    let removedImages = []; // Tracks existing images that are removed

    // Preview and add new images
    function previewNewImages(event) {
        const files = event.target.files;
        Array.from(files).forEach((file) => {
            const reader = new FileReader();
            reader.onload = (e) => {
                const imgContainer = createImageContainer(e.target.result, 'new', file);
                imageArray.push(file); // Store the file for upload
                document.getElementById("imagePreview").appendChild(imgContainer);
            };
            reader.readAsDataURL(file);
        });
    }

    // Create image container for both new and existing images
    function createImageContainer(src, type, imageFileOrName) {
        const container = document.createElement("div");
        container.classList.add("image-container");
        
        const img = document.createElement("img");
        img.src = src;
        img.classList.add("img-thumbnail");
        img.style = "width:100px; cursor:pointer;";
        img.onclick = () => openCropper(src, type, imageFileOrName);

        container.appendChild(img);

        // Crop button
        const cropBtn = document.createElement("button");
        cropBtn.innerText = "Crop";
        cropBtn.classList.add("btn", "btn-primary");
        cropBtn.onclick = () => openCropper(src, type, imageFileOrName);
        container.appendChild(cropBtn);

        // Remove button
        const removeBtn = document.createElement("button");
        removeBtn.innerText = "Remove";
        removeBtn.classList.add("btn", "btn-danger");
        removeBtn.onclick = () => removeImage(imageFileOrName, type);

        container.appendChild(removeBtn);
        return container;
    }

    // Open cropping modal
    function openCropper(imageSrc, type, imageFileOrName) {
        document.getElementById("cropModal").style.display = "block";
        document.getElementById("croppingImage").src = imageSrc;
        if (cropper) cropper.destroy();

        cropper = new Cropper(document.getElementById("croppingImage"), { aspectRatio: 1 });
        currentImage = { type, imageFileOrName };
    }

    // Crop and replace the image
    function cropImage() {
        cropper.getCroppedCanvas().toBlob((blob) => {
            const croppedFile = new File([blob], `${Date.now()}.png`, { type: 'image/png' });
            
            if (currentImage.type === 'new') {
                const index = imageArray.indexOf(currentImage.imageFileOrName);
                if (index >= 0) imageArray[index] = croppedFile;
            } else if (currentImage.type === 'existing') {
                removeImage(currentImage.imageFileOrName, 'existing', true); // Remove existing image and replace it
                imageArray.push(croppedFile);
            }

            document.getElementById("cropModal").style.display = "none";
            cropper.destroy();
        });
    }

    // Remove selected image
    function removeImage(imageFileOrName, type, isCropped = false) {
        if (type === 'existing') {
            removedImages.push(imageFileOrName); // Track removed image from existing
            const imgContainer = document.querySelector(`[data-image="${imageFileOrName}"]`);
            if (imgContainer) imgContainer.remove(); // Remove preview
            // Send an AJAX request to remove the image from the database
            sendRemoveImageRequest(imageFileOrName);
        } else if (type === 'new') {
            const index = imageArray.indexOf(imageFileOrName);
            if (index >= 0) imageArray.splice(index, 1);
        }
    }

    // Function to send AJAX request to remove image from the database
    function sendRemoveImageRequest(imageFileName) {
        fetch(`/admin/products/remove-image`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ imageFileName }),
        })
        .then(response => response.json())
        .then(data => {
            console.log('Image removed successfully:', data);
        })
        .catch((error) => {
            console.error('Error removing image:', error);
        });
    }
            
                function addSizeVariation() {
                    const container = document.getElementById('size-variations-container');
                    const newVariation = document.createElement('div');
                    newVariation.classList.add('size-variation');
                    newVariation.innerHTML = `
                        <select class="form-select" name="sizes[]" required>
                            <option value="" selected>Select Size</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                        </select>
                        <input type="number" name="prices[]" placeholder="Price" required>
                        <input type="number" name="stocks[]" placeholder="Stock" required>
                        <button type="button" class="btn btn-danger" onclick="removeSizeVariation(this)">Remove</button>
                    `;
                    container.appendChild(newVariation);
                }
                
                function removeSizeVariation(button) {
                    button.parentElement.remove();
                }
            </script>
        </body>
        
