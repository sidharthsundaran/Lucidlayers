    <script>
         $(document).ready(function() {
        $('form').on('submit', function(e) {
            e.preventDefault(); // Prevent form from submitting traditionally

            var formData = $(this).serialize(); // Collect form data

            $.ajax({
                type: 'POST',
                url: `/admin/categories/edit/<%= data._id%>`, // The same endpoint where your form submits
                data: formData,
                success: function(response) {
                    if (response.success) {
                        // If category added successfully, show SweetAlert success
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: response.message,
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/admin/categories/'; // Redirect after confirmation
                            }
                        });
                    }
                },
                error: function(xhr) {
                    // If there was an error, show SweetAlert error
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: xhr.responseJSON.message,
                        confirmButtonText: 'OK'
                    });
                }
            });
        });
    });
    </script>
