    <script>
    
    function validateForm() {
    let isValid = true;
    document.querySelectorAll('.error-message').forEach(el => el.innerHTML = '');

    const code = document.getElementById('coupon_code').value.trim();
    const description = document.getElementById('coupon_description').value.trim();
    const amount = document.getElementById('discount_amount').value;
    const expireDate = new Date(document.getElementById('expire_date').value);
    const minPurchase = document.getElementById('min_purchase').value;

    if (!code) {
        document.getElementById('codeError').innerHTML = 'Please enter a coupon code.';
        isValid = false;
    }

    if (!description) {
        document.getElementById('descriptionError').innerHTML = 'Please enter a coupon description.';
        isValid = false;
    }

    if (!amount || isNaN(amount) || Number(amount) <= 0) {
        document.getElementById('amountError').innerHTML = 'Please enter a valid discount amount.';
        isValid = false;
    }

    if (isNaN(expireDate.getTime())) {
        document.getElementById('expireDateError').innerHTML = 'Please enter a valid expiration date.';
        isValid = false;
    }

    if (!minPurchase || isNaN(minPurchase) || Number(minPurchase) < 0) {
        document.getElementById('minPurchaseError').innerHTML = 'Please enter a valid minimum purchase amount.';
        isValid = false;
    }

    return isValid;
}
document.getElementById('couponForm').addEventListener('submit', async function (event) {
    event.preventDefault();
    
    if (!validateForm()) {
        return;
    }
    
    const formData = new FormData(this);
    const formObj = {};
    formData.forEach((value, key) => {
        formObj[key] = value;
    });

    try {
        const response = await fetch(this.action, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formObj)
        });

        const result = await response.json();

        if (response.ok && result.success) {
            Swal.fire({
                toast: true,
                icon: 'success',
                title: result.message,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            }).then(() => {
                window.location.reload(); 
            });
        } else {
            Swal.fire({
                toast: true,
                icon: 'error',
                title: result.message || 'An error occurred',
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });
        }
    } catch (error) {
        Swal.fire({
            toast: true,
            icon: 'error',
            title: 'An unexpected error occurred. Please try again later.',
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000
        });
    }
});

