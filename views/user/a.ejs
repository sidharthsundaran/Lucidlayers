    <script>
        let selectedSize = ''; // Initialize selectedSize as an empty string
        
        function decreaseQuantity() {
            const qtyInput = document.getElementById('qtybutton');
            let quantity = parseInt(qtyInput.value);
            if (quantity > 1) {
                qtyInput.value = quantity - 1;
                document.getElementById('hiddenQuantity').value = qtyInput.value; 
            }
        }
        
        function increaseQuantity() {
            const qtyInput = document.getElementById('qtybutton');
            let quantity = parseInt(qtyInput.value);
            qtyInput.value = quantity + 1; 
            document.getElementById('hiddenQuantity').value = qtyInput.value; 
        }
        
        function selectSize(event, size, price, stock) {
            event.preventDefault(); // Prevent the default anchor behavior
        
            // Reset all size options to default style
            const sizeOptions = document.querySelectorAll('.size-option');
            sizeOptions.forEach(option => {
                option.classList.remove('selected'); // Remove selected class
                option.style.color = ''; // Reset color
                option.style.fontWeight = ''; // Reset font weight
            });
        
            // Set the selected size option style
            const selectedOption = Array.from(sizeOptions).find(option => option.textContent.trim() === size);
            if (selectedOption) {
                selectedOption.classList.add('selected'); // Add selected class
                selectedOption.style.color = 'black'; // Change color to black
                selectedOption.style.fontWeight = 'bold'; // Change font weight to bold
        
                // Update hidden fields or other necessary values
                selectedSize = size; // Update the selectedSize variable
                document.getElementById('selectedSize').value = size; // Update the hidden input
                document.getElementById('hiddenQuantity').value = 1; // Reset quantity if needed
            }
        }
        
        async function addToCart(productId, quantity, selectedSize) {
            if (!selectedSize) {
                Swal.fire({
                    title: 'Error!',
                    text: 'Please select a size.',
                    icon: 'error',
                    toast: true, 
                    position: 'top', 
                    showConfirmButton: false, 
                    timer: 3000,
                });
                return;
            }
        
            try {
                const response = await fetch(`/user/add-to-cart/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ quantity, selectedSize }),
                });
        
                const data = await response.json();
        
                if (response.ok) {
                    Swal.fire({
                        title: 'Success!',
                        text: data.message,
                        icon: 'success',
                        toast: true, 
                        position: 'top', 
                        showConfirmButton: false, 
                        timer: 3000,
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: data.message,
                        icon: 'error',
                        toast: true, 
                        position: 'top', 
                        showConfirmButton: false, 
                        timer: 3000,
                    });
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'Error adding item to cart',
                    icon: 'error',
                    toast: true, 
                    position: 'top', 
                    showConfirmButton: false, 
                    timer: 3000,
                });
            }
        }
        
        document.getElementById('addToCartButton').addEventListener('click', (event) => {
            event.preventDefault();
            const quantity = parseInt(document.getElementById('qtybutton').value);
            addToCart('<%= data._id %>', quantity, selectedSize);
        });
