<script>
    let currentProductId;
let currentSizeVariations;

function showSizeSelection(productId, sizeVariations) {
    currentProductId = productId;
    currentSizeVariations = sizeVariations;

    const sizeOptionsDiv = document.getElementById('sizeOptions');
    sizeOptionsDiv.innerHTML = ''; // Clear previous options

    sizeVariations.forEach(variation => {
        if (variation.stock > 0) {
            const sizeButton = document.createElement('div');
            sizeButton.className = 'size-button';
            sizeButton.innerText = variation.size;
            sizeButton.onclick = () => selectSize(sizeButton, variation.size);
            sizeOptionsDiv.appendChild(sizeButton);
        }
    });

    document.getElementById('sizeSelectionModal').style.display = 'block';
}

function selectSize(button, size) {
    const buttons = document.querySelectorAll('.size-button');
    buttons.forEach(btn => btn.classList.remove('selected')); // Remove selection from all buttons
    button.classList.add('selected'); // Add selection to the clicked button
}

async function confirmAddToCart() {
    const selectedButton = document.querySelector('.size-button.selected');
    const errorMessageDiv = document.getElementById('errorMessage');
    errorMessageDiv.style.display = 'none'; // Hide error message initially

    if (!selectedButton) {
        errorMessageDiv.innerText = 'Please select a size.';
        errorMessageDiv.style.display = 'block'; // Show error message
        return;
    }

    const selectedSize = selectedButton.innerText; 
    const quantity = 1; 
    try {
        const response = await fetch(`/user/add-to-cart/${currentProductId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                selectedSize: selectedSize,
                quantity: quantity,
            }),
        });

        const result = await response.json();
        if (response.ok) {
            showToast(result.message); // Show toast message for successful addition
            closeModal();
            setTimeout(() => {
                location.reload(); // Refresh the page after a successful addition
            }, 3000); // Wait for the toast to be displayed before refreshing
        } else {
            errorMessageDiv.innerText = result.message; // Show error message in modal
            errorMessageDiv.style.display = 'block'; // Show error message
        }
    } catch (error) {
        console.error('Error adding item to cart:', error);
        errorMessageDiv.innerText = 'There was an error adding the item to the cart.'; // Show error in modal
        errorMessageDiv.style.display = 'block'; // Show error message
    }
}

function closeModal() {
    document.getElementById('sizeSelectionModal').style.display = 'none';
}

async function removeFromWishlist(productId) {
    try {
        const response = await fetch('/user/remove-from-wishlist', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId })
        });
        console.log("request sent");
        const data = await response.json();

        if (response.ok) {
            showToast(data.message); // Show toast message for successful removal
            location.reload(); // Refresh the page after successful removal
        } else {
            showToast(data.message); // Show toast message for error
        }
    } catch (error) {
        console.error('There was a problem with the fetch operation:', error);
        showToast('Failed to remove item from wishlist. Please try again.');
    }
}

function showToast(message) {
    const toast = document.getElementById('toast');
    toast.innerText = message;
    toast.style.display = 'block'; // Show the toast
    toast.style.opacity = 1; // Reset opacity

    // Automatically hide the toast after 3 seconds
    setTimeout(() => {
        toast.style.opacity = 0; // Fade out
        setTimeout(() => {
            toast.style.display = 'none'; // Hide the toast completely
        }, 500); // Wait for fade out to complete
    }, 3000); // Show for 3 seconds
}
